#social-connections,
#social-connections-popup-overlay,
#social-connections-popup
  box-sizing: border-box
  *, *:before, *:after
    box-sizing: inherit
  .blue
    background: rgb(43, 115, 145)
  .brown
    background: rgb(143, 111, 24)
  .red
    background: rgb(184, 27, 27)
  .green
    background: rgb(73, 123, 14)
  .author
    background: rgba(0, 0, 0, 0.5)
    color: #fff
    font-size: 0.75em
    img
      float: left
      width: 48px
    div
      display: inline-block
      padding: 0.5em 0.25em
      a
        display: block
        color: rgba(255, 255, 255, 0.9)
        text-decoration: none
      .location
        color: rgba(255, 255, 255, 0.7)
        font-size: 0.9em

#social-connections-popup-overlay
  background: rgba(0, 0, 0, 0.8)
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  overflow: hidden
  width: 100%
  height: 100%
  z-index: 999999
  display: none
  text-align: center

#social-connections-popup
  display: none
  z-index: 9999999
  position: absolute
  text-align: center
  width: 100%
  main
    margin: 1em auto
    text-align: left
    max-width: 100%
    width: 250px
    border: 2px solid #fff
    img
      padding: 1em
      width: 100%
    .author, .content
      padding: 0.5em 1em

#social-connections
  section.tile
    position: relative
    word-wrap: break-word
    text-align: center
    .content
      a
        color: rgba(240, 240, 240, 0.8)
      color: #fff
      padding: 0.5em
      line-height: 1.5
      position: absolute
      text-align: left
      top: 0
      right: 0
      left: 0
      bottom: 0
      height: 100%
      width: 100%
      &.image
        cursor: pointer
        background-size: cover !important
    .icon
      position: absolute
      height: 2em
      color: #fff
      z-Index: 999
      font-size: 3em
      top: 0
      right: 0
      bottom: 0
      left: 0
      margin: auto
      cursor: pointer
    .author
      text-align: left
      position: absolute
      bottom: 0
      right: 0
      left: 0

@media screen and (max-width: 35.49em)
  #social-connections
    section
      min-height: 100vw

@media screen and (min-width: 35.5em)
  #social-connections
    section
      min-height: 50vw

@media screen and (min-width: 48em)
  #social-connections
    section
      min-height: 16vw
      .content
        font-size: 0.75em
